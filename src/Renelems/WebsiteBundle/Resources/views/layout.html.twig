{% extends '::base.html.twig' %}

{% block title %}{{ seo_title }}{% endblock %}
{% block description %}{{ seo_description }}{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('/bundles/renelemswebsite/css/bootstrap.min.css') }}" rel="stylesheet" />
	<link href="{{ asset('/bundles/renelemswebsite/css/main.css') }}" rel="stylesheet" />
	
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
	<script src="{{ asset('/bundles/renelemswebsite/js/main.js') }}"></script>
	
{% endblock %}

{% block body %}

<div id="wrap">
<div class="white_bar"></div>
<div class="container">
	<div id="header">
		{% block menu %}
		<div id="menu">
			<h1 class="pull-left"><a href="{{ path('renelems_home') }}" id="home_btn">ReneLems.nl</a></h1>
			<ul class="pull-right">
				<li class="green_bg pull-left"><a href="" class="{% if menu == 'service' %}active{% endif %}"><img src="{{ asset('/bundles/renelemswebsite/images/icons/services.png') }}" />Diensten</a></li>
				<li class="blue_bg pull-left"><a href="" class="{% if menu == 'project' %}active{% endif %}"><img src="{{ asset('/bundles/renelemswebsite/images/icons/projects.png') }}" />Projecten</a></li>
				<li class="yellow_bg pull-left"><a href="" class="{% if menu == 'contact' %}active{% endif %}"><img src="{{ asset('/bundles/renelemswebsite/images/icons/contact.png') }}" />Contact</a></li>
			</ul>
		</div>
		{% endblock %}
	</div>
	<div id="content_wrapper">
    	<div class="content">
			{% block content %}
			{% endblock %}
		</div>
	</div>
	
</div>
</div>
<div id="footer">
	<div class="container">
	</div>
</div>
<script type="text/javascript">
{% block javascripts_footer %}
		var colors = ['#2e8236', '#2c89a4', '#dcb84c'];
		$('#home_btn').hover(function() {
			var random_color = colors[Math.floor(Math.random() * colors.length)];
			$(this).css('color', random_color);
		}, function() {
			$(this).css('color', '');
		});
{% endblock %}
</script>
{% endblock %}
